@model OpportunityDetailsServiceModel

@{
    ViewData["Title"] = $"Delete opportunity - {Model.Name}";
}

<h2 class="text-danger">Are you sure you want to delete opportunity @Model.Name?</h2>

<div class="panel panel-default">
    <div class="panel-heading"><strong>@Model.Name</strong></div>
    <div class="panel-body">
        <p>@Model.Description</p>
        <p>For account: @Model.AccountName</p>
    </div>
</div>

<form method="post">
    <input type="hidden" asp-for="@Model.Id" />
    <button type="submit" class="btn btn-danger">Delete</button>
</form>
