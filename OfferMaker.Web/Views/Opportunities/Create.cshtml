@model AddOpportunityFormModel

@{
    ViewData["Title"] = "Create opportunity";
}

<h2>@ViewData["Title"]</h2>

<div class="row">
    <div class="col-md-4">
        <form method="post">
            <div asp-validation-summary="All" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Name"></label>
                <input asp-for="Name" class="form-control" />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Description"></label>
                <input asp-for="Description" class="form-control" />
                <span asp-validation-for="Description" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="OportunityMembers"></label>
                <select asp-for="OportunityMembers" asp-items="Model.PotentialMembers" class="form-control"></select>
                <span asp-validation-for="OportunityMembers" class="text-danger"></span>
            </div>
            <input type="hidden" asp-for="AccountId" />
            <button type="submit" class="btn btn-success">Create opportunity</button>
        </form>
    </div>
</div>

@section Scripts {
    @await Html.PartialAsync("_ValidationScriptsPartial")
}

