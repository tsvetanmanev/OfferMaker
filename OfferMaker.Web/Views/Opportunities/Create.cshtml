@model AddOpportunityFormModel

@{
    ViewData["Title"] = "Create opportunity";
}

<h2>@ViewData["Title"]</h2>

<h3>Account ID: @Model.AccountId</h3>

<div class="row">
    <div class="col-md-4">
        <form method="post">
            <div asp-validation-summary="All" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Name"></label>
                <input asp-for="Name" class="form-control" />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Description"></label>
                <input asp-for="Description" class="form-control" />
                <span asp-validation-for="Description" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="opportunityMembers"></label>
                <select asp-for="opportunityMembers" asp-items="Model.potentialMembers" class="form-control" />
                <span asp-validation-for="opportunityMembers"  class="text-danger"></span>
            </div>
            <input type="hidden" asp-for="AccountId" />
            <button type="submit" class="btn btn-default">Create account</button>
        </form>
    </div>
</div>

@section Scripts {
    @await Html.PartialAsync("_ValidationScriptsPartial")
}

